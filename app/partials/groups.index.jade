layout(title="Groups")
  table.table.table-striped
    thead
      tr
        td Group ID
        td Name
        td
    tbody
      tr(ng-repeat='group in groups')
        td {{group.gid_number}}
        td {{group.common_name}}
        td
          div
            a.btn(ng-click="edit(group.common_name)")
              | Edit
            |  
            a.btn.btn-danger(ng-click="remove(group.common_name)", ng-hide="user.uid_number == 0")
              | Remove
  
  a.btn(ng-click="addNew()")
    | Add Group
