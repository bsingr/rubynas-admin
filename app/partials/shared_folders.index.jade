layout(title="Shared Folders")
  table.table.table-striped
    thead
      tr
        td Directory
        td
    tbody
      tr(ng-repeat='sharedFolder in sharedFolders')
        td {{sharedFolder.path}}
        td
          div
            a.btn(ng-click="edit(sharedFolder.id)")
              | Edit
            |  
            a.btn.btn-danger(ng-click="remove(sharedFolder.id)")
              | Remove
  a.btn(ng-click="addNew()")
    | Add Share
