layout title="Users"
  table.table.table-striped
    thead
      tr
        td User ID
        td Name
        td Home Directory
        td E-Mail
        td Group
        td
    tbody
      tr(ng-repeat='user in users')
        td {{user.uid_number}}
        td {{user.common_name}}
        td {{user.home_directory}}
        td {{user.mail}}
        td {{groupFor(user.gid_number)}}
        td
          div
            a.btn(ng-click="edit(user.common_name)")
              | Edit
            |  
            a.btn.btn-danger(ng-click="remove(user.common_name)", ng-hide="user.uid_number == 0")
              | Remove
  a.btn(ng-click="addNew()")
    | Add User
