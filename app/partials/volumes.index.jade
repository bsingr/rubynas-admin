layout(title="Volumes")
  table.table.table-sripted
    thead
      tr
        td Name
        td Path
        td Capacity
        td Usage
        td
    tbody
      tr(ng-repeat='volume in volumes')
        td {{volume.name}}
        td {{volume.path}}
        td {{volume.capacity | bytes}}
        td
          .progress
            div.bar.bar-success(style="width: {{volume.usage}}%;")
              | {{volume.capacity * (volume.usage / 100) | bytes}}
        td
          div
            a.btn(ng-click="edit(volume.id)")
              | Edit
            |  
            a.btn.btn-danger(ng-click="remove(volume.id)", ng-hide="volume.path == '/'")
              | Remove
  a.btn(ng-click="addNew()")
    | Add Volume
